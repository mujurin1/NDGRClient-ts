{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    
    "outDir": "./build",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,

    "useDefineForClassFields": true,
    "target": "ES2023",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
  },
  "include": ["src/**/*.ts"],
}
